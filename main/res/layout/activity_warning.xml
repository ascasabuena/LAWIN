<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/warning"
    tools:context=".warning">

    <ImageView
        android:id="@+id/home"
        android:layout_width="95dp"
        android:layout_height="74dp"
        android:layout_marginEnd="202dp"
        android:layout_marginBottom="118dp"
        app:layout_constraintBottom_toTopOf="@+id/check"
        app:layout_constraintEnd_toStartOf="@+id/reports"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/profile"
        android:layout_width="43dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon" />

    <ImageView
        android:id="@+id/reports"
        android:layout_width="65dp"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@+id/profile"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/folder" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRACKER LOCATION"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="115dp" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/map_warning"
        android:layout_width="285dp"
        android:layout_height="243dp"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="192dp" />

    <TextView
        android:id="@+id/location_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="204dp"
        tools:layout_editor_absoluteY="468dp" />

    <TextView
        android:id="@+id/near_location_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="204dp"
        tools:layout_editor_absoluteY="497dp" />

    <TextView
        android:id="@+id/time_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="204dp"
        tools:layout_editor_absoluteY="524dp" />

    <TextView
        android:id="@+id/distance_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="204dp"
        tools:layout_editor_absoluteY="602dp" />

</androidx.constraintlayout.widget.ConstraintLayout>